<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/select_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="选择帐号" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/select_phone"
        android:layout_alignBottom="@+id/select_phone"
        android:layout_toEndOf="@+id/select_phone"
        android:inputType="phone"
        android:text="电话号码" />

    <Button
        android:id="@+id/get_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/select_phone"
        android:text="获取图片" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/get_pic"
        android:layout_alignStart="@+id/et_phone"
        android:layout_marginBottom="12dp"
        android:text="null" />

    <Button
        android:id="@+id/bt_upload_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/get_pic"
        android:layout_marginTop="13dp"
        android:text="上传talk" />

    <Button
        android:id="@+id/bg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Login" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/bt_delete_secret"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:text="删除Talk" />


    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:layout_below="@+id/delete"
        android:layout_alignEnd="@+id/login" />

    <Button
        android:id="@+id/bt_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传SECRET"
        android:layout_below="@+id/bt_upload_talk"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_delete_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除SECRET"
        android:layout_below="@+id/tv_delete"
        android:layout_alignStart="@+id/bt_delete_article" />

    <Button
        android:id="@+id/bt_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_secret"
        android:layout_below="@+id/bt_delete_secret"
        android:layout_marginTop="19dp"
        android:text="上传Article" />

    <Button
        android:id="@+id/bt_delete_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除ARTICLE"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/delete_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/delete"
        android:layout_below="@+id/bt_delete_secret"
        android:text="delete" />

    <TextView
        android:id="@+id/delete_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_delete"
        android:layout_below="@+id/bt_article"
        android:text="delete" />

    <TextView
        android:id="@+id/upload_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bt_article"
        android:text="false" />

    <TextView
        android:id="@+id/upload_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_delete_secret"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/bt_secret"
        android:text="false" />

    <TextView
        android:id="@+id/upload_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_upload_talk"
        android:layout_alignBottom="@+id/bt_upload_talk"
        android:layout_toEndOf="@+id/bt_upload_talk"
        android:text="false" />

    <Button
        android:id="@+id/bt_release_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="发布SECRET" />

</RelativeLayout>
